{
	"name": "auds",
	"devDependencies": {
		"autoprefixer": "^9.4.6",
		"cfonts": "^2.4.0",
		"chalk": "^2.4.2",
		"express": "^4.16.4",
		"inquirer": "6.2.1",
		"jest-cli": "^23.6.0",
		"node-sass": "^4.9.3",
		"pa11y": "^5.1.0",
		"postcss": "^7.0.14",
		"puppeteer": "^1.11.0",
		"rimraf": "^2.6.3",
		"sass-versioning": "^0.3.0",
		"semver": "^5.4.1",
		"treeify": "^1.0.1"
	},
	"scripts": {
		"build": "yarn workspaces run build",
		"scaffolding": "node ./scripts/helper.js scaffolding",
		"nuke": "yarn delete:node_modules | yarn delete:lib",
		"delete:node_modules": "rimraf packages/*/node_modules | rimraf node_modules",
		"delete:lib": "rimraf packages/*/lib/**",
		"test:unit-test": "jest",
		"test": "node scripts/helper.js test && node ./scripts/a11y.js"
	},
	"jest": {
		"testRegex": "\\.spec.js$",
		"collectCoverageFrom": [
			"packages/*/lib/js/*.js"
		],
		"coverageThreshold": {
			"global": {
				"branches": 0,
				"functions": 0,
				"lines": 0,
				"statements": 0
			}
		}
	},
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"pancake": {
		"auto-save": false
	}
}