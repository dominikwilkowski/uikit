{
	"devDependencies": {
		"autoprefixer": "^9.4.9",
		"cfonts": "^2.4.2",
		"chalk": "^2.4.2",
		"express": "^4.16.4",
		"inquirer": "6.2.2",
		"jest-cli": "^24.1.0",
		"lerna": "^3.13.1",
		"node-sass": "^4.11.0",
		"pa11y": "^5.1.0",
		"postcss": "^7.0.14",
		"puppeteer": "^1.12.2",
		"rimraf": "^2.6.3",
		"semver": "^5.6.0",
		"treeify": "^1.1.0"
	},
	"scripts": {
		"scaffolding": "node ./scripts/helper.js scaffolding",
		"bootstrap": "lerna bootstrap",
		"build": "lerna run build --concurrency 1",
		"publish": "lerna publish --skip-git",
		"nuke": "yarn delete:node_modules | yarn delete:lib | yarn delete:pancake",
		"delete:node_modules": "rimraf packages/*/node_modules | rimraf node_modules",
		"delete:lib": "rimraf packages/*/lib/**",
		"delete:pancake": "rimraf pancake",
		"test:unit-test": "jest",
		"test": "node scripts/helper.js test && node ./scripts/a11y.js"
	},
	"jest": {
		"testRegex": "\\.spec.js$",
		"collectCoverageFrom": [
			"packages/*/lib/js/*.js"
		],
		"coverageThreshold": {
			"global": {
				"branches": 0,
				"functions": 0,
				"lines": 0,
				"statements": 0
			}
		}
	},
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"pancake": {
		"auto-save": false
	}
}
